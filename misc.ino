void delayfunc(String func, int del) {      //delays with countdown in serial monitor, was used to check current consumption
  Serial.print(func);
  Serial.print(" beginning in ");
  for (int i = del ; i > 0; i--) {
    Serial.print(i);
    delay(300);
    Serial.print(".");
    delay(300);
    Serial.print(".");
    delay(400);
  }
  Serial.println("");
}
